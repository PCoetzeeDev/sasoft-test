<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="EmployeeUnit">
            <directory suffix="Test.php">./tests/Domains/Employee/Unit</directory>
        </testsuite>
        <testsuite name="EmployeeFeature">
            <directory suffix="Test.php">./tests/Domains/Employee/Feature</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </coverage>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="APP_BASE_PATH" value="/usr/share/nginx/sasofttest.local" force="true"/>
<!--        <env name="DB_CONNECTION" value="pgsql"/>-->
<!--        <env name="DB_DATABASE" value=""/>-->
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
